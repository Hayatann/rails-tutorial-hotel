<div class="container mb-3 text-center">
  <div class="row justify-content-end">
    <div class="col">
      <%= search_form_for @q do |f| %>
        <%= f.search_field :name_cont, placeholder: "ホテル名" %>
        <%= f.submit 'Search', class: "btn btn-outline-dark" %>
      <% end %>
    </div>
    <div class="col">
      <%= search_form_for @q do |f| %>
        <%= f.search_field :prefecture_cont, placeholder: "都道府県名" %>
        <%= f.submit 'Search', class: "btn btn-outline-dark" %>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <% @hotels.in_groups_of(3) do |group| %>
    <div class="row">
      <% group.compact.each do |hotel| %>
        <div class="col-md-3">
          <div class="card" >
            <%= image_tag(hotel.picture.url, class: "card-img-top") if hotel.picture.present? %>
            <div class="card-body">
              <h5 class="card-title"><%= hotel.name %></h5>
              <p class="card-text"><%= hotel.description %></p>
              <div class="card-footer">
                <%= link_to "詳細を見る", hotel_path(hotel.id), class: "m-2" %>
                <%= link_to "レビューを見る", hotel_reviews_path(hotel.id), class: "m-2" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
