<h1 class="m-3 fw-bold"><%= @hotel.name %> レビュー一覧</h1>
  <% @reviews.each do |review| %>
    <div class="card m-3">
      <div class="card-header">
        rating:  <%= review.evaluation %>
      </div>
      <div class="card-body">
        <h5 class="card-title fw-bold">
          <%= review.title %>
        </h5>
        <div class="card-text">
          <%= review.name %>
        </div>
        <div class="card-text">
          <%= review.description %>
        </div>
      </div>
    </div>

  <% end %>

<div class="container text-center">
  <div class="row  m-3 justify-content-center">
    <div class="col">
      <%= link_to "レビューを投稿する", new_hotel_review_path(@hotel) %>
    </div>
    <div class="col">
      <%= link_to "Back", hotels_path %>
    </div>
  </div>
</div>
